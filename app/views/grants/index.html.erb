<h1>Grants</h1>



<div class="row g-3 col-xxl-3">
  <div class="col-md-6 col-xxl-3">
  <div class="card h-md-100 ecommerce-card-min-width">
  <div class="card-header pb-0">
    <h6 class="mb-0 mt-2 d-flex align-items-center">Total Records</h6>
  </div>
  <div class="card-body d-flex flex-column justify-content-end">
    <div class="row">
      <div class="col">
        <p class="font-sans-serif lh-1 mb-1 fs-5">
        <%= number_with_delimiter(Resource.count) %>
        </p>
      </div>
     
    </div>
  </div>
</div>
  </div>
</div>

<div class="my-5">
<%# Render a view helper in your views (skipping nav links for empty pages) %>
<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</div>

<table
    class="table table-hover table-striped table-borderless"
    data-toggle="table"
    data-search="true"
    data-show-toggle="true"
    data-show-fullscreen="true"
    data-show-columns-toggle-all="true"
    data-show-export="true"
    data-show-columns="true"
    data-pagination="false"
  >
  <thead>
    <tr>
      <th scope="col" data-sortable="true">Title</th>
      <th scope="col" data-sortable="true">Institution</th>
      <th scope="col" data-sortable="true">Total Assets</th>
      <th scope="col" data-sortable="true">Online Assets</th>
      <th scope="col" data-sortable="true">Score</th>
      <th scope="col" data-sortable="true">Program</th>
      <!-- <th scope="col">Contact</th> -->
      <th scope="col" data-sortable="true">Date Submitted</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @grants.each do |grant| %>
      <tr>
        <td><%= link_to grant.title, grant %></td>
        <td><%= grant.institution %></td>
        <td><%= grant.resources.size %></td>
        <td><%= grant.online_resources_count %></td>
        <td><%= number_to_percentage(grant.availability_score, precision: 2) %></td>
        <td><%= grant.program %></td>
        <!-- <td><%= mail_to grant.email, grant.contact %></td> -->
        <td><%= grant.submission %></td>
        <td>
          <%= link_to 'Verify', grant, method: :verify_grant_resources_path, class: 'btn btn-success', data: { confirm: 'Are you sure?' }%>
          <%#= link_to 'Destroy', grant, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="my-5">
<%# Render a view helper in your views (skipping nav links for empty pages) %>
<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</div>